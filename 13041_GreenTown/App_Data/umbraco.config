      <NewsItem id="1358" parentID="1066" level="3" creatorID="0" sortOrder="27" createDate="2013-12-11T00:18:29" updateDate="2013-12-11T00:38:55" nodeName="Change of eras - Verandering tijdperken" urlName="change-of-eras-verandering-tijdperken" path="-1,1047,1066,1358" isDoc="" nodeType="1065" creatorName="Greentown" writerName="Greentown" writerID="0" template="1064" nodeTypeAlias="NewsItem">
