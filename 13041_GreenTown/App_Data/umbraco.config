      <NewsItem id="1441" parentID="1066" level="3" creatorID="0" sortOrder="42" createDate="2017-01-26T10:19:57" updateDate="2017-04-01T16:52:52" nodeName="Now it's the time for GreenTown" urlName="now-its-the-time-for-greentown" path="-1,1047,1066,1441" isDoc="" nodeType="1065" creatorName="Greentown" writerName="Greentown" writerID="0" template="1064" nodeTypeAlias="NewsItem">
