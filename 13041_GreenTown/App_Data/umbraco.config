      <NewsItem id="1391" parentID="1066" level="3" creatorID="0" sortOrder="33" createDate="2014-06-04T09:58:21" updateDate="2014-06-04T10:20:48" nodeName="GreenTown meets Alex Rosaria" urlName="greentown-meets-alex-rosaria" path="-1,1047,1066,1391" isDoc="" nodeType="1065" creatorName="Greentown" writerName="Greentown" writerID="0" template="1064" nodeTypeAlias="NewsItem">
