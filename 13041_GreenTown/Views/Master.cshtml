@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
	var parent = Model.Content.AncestorOrSelf(1); 
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
   
    <script src="@Url.Content("~/scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>

    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/Content/Images/favico.ico")">
    <link href="@Url.Content("~/css/Site.css")" rel="stylesheet" type="text/css" />
    
	<script src="~/scripts/jquery.validate.min.js"></script>
<script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/scripts/jquery.unobtrusive-ajax.min.js"></script>
	
    <meta name="keywords" Content='@Umbraco.Field("metaKeywords")' />
    <meta name="description" Content='@Umbraco.Field("metaDescription")' />
    <script type="text/javascript">
        $(document).ready(function() {
            $("nav ul li a:last").css("padding-right", "0px");
        });
    </script>
</head>

<body>
	<div id="wrapper">
	
	    <div id="header">	        
	        <div class="innerheader">
	            <div class="logo"><a href="/"><img src="@Url.Content("~/Content/Images/logo.png")" alt="GreenTown"/></a></div>
                
	            <div class="languageSwitch">
	                @*<a href="@parent.Url()">@parent.Name</a> |*@
	                <a href="#">English</a> |
	                <a href="#">Papiamentu</a> |
                    <a href="#">Dutch</a>
	            </div>

	            <nav id="menu">
	                @Html.Partial("NavigationMenu", @Model.Content)
	            </nav>
	        </div>
	    </div>
	
    <div class="clear"></div>
	
    @RenderBody()

    </div>

    <div id="footer">
        <div class="innerfooter">
            &copy; GreenTown Curacao @DateTime.Now.Year | <a href="/FAQ/">FAQ</a>
            
            <div class="developedby">
                @umbraco.library.GetDictionaryItem("DevelopedBy") <a href="http://www.icemedia.com">icemedia.com</a> <a href="#"><img src="@Url.Content("~/Content/Images/twIcon.png")" alt="Twitter"></a>
					<a href="#"><img src="@Url.Content("~/Content/Images/ytIcon.png")" alt="Youtube"></a>
					<a href="#"><img src="@Url.Content("~/Content/Images/fbIcon.png")" alt="Facebook"></a>
            </div>
        </div>
    </div>
		
</body>
</html>